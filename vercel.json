{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "functions": {
    "dist/index.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/dist/index.js"
    },
    {
      "source": "/sw.js",
      "destination": "/dist/public/sw.js"
    },
    {
      "source": "/(.*)",
      "destination": "/dist/public/index.html"
    }
  ]
}
